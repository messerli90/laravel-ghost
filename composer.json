{
    "name": "messerli90/laravel-ghost",
    "description": "Laravel wrapper for the Ghost blogging API",
    "keywords": [
        "messerli90",
        "laravel-ghost"
    ],
    "homepage": "https://github.com/messerli90/laravel-ghost",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Messerli",
            "email": "michaelamesserli@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/http": "^7.0|^8.0",
        "spatie/laravel-package-tools": "^1.4.3",
        "illuminate/contracts": "^8.0"
    },
    "require-dev": {
        "brianium/paratest": "^6.2",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.15",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9",
        "vimeo/psalm": "^4.4",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Messerli90\\Ghost\\": "src",
            "Messerli90\\Ghost\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Messerli90\\Ghost\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "./vendor/bin/testbench package:test --parallel",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Messerli90\\Ghost\\GhostServiceProvider"
            ],
            "aliases": {
                "Ghost": "Messerli90\\Ghost\\GhostFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
